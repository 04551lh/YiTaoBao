<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.feicui.android.yitaobao.Presentation.main.Shop.Layout
        android:id="@+id/pf_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </android.support.v7.widget.RecyclerView>
    </com.feicui.android.yitaobao.Presentation.main.Shop.Layout>
    <ImageView
        android:layout_width="70dp"
        android:id="@+id/backTop"
        android:visibility="gone"
        android:src="@drawable/backtop"
        android:background="@drawable/circle_backtop"
        android:layout_alignBottom="@+id/pf_refresh"
        android:layout_margin="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_height="70dp">
    </ImageView>
</RelativeLayout>