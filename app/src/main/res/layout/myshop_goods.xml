<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="@dimen/dp_5"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_weight="1"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:src="@drawable/ic_chat_two"
           android:id="@+id/myshop_iv"
           android:layout_width="@dimen/dp_120"
           android:layout_height="@dimen/dp_120" />
       <LinearLayout
           android:layout_margin="@dimen/dp_5"
           android:layout_weight="1"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_margin="@dimen/dp_3"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:gravity="center"
                   android:text="@string/ShopName"
                   android:textColor="@color/text_color_hint"
                   android:textSize="@dimen/sp_20"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" />
               <TextView
                   android:layout_weight="1"
                   android:id="@+id/tv_myshop_name"
                   android:layout_width="@dimen/layout"
                   android:layout_height="match_parent" />
           </LinearLayout>
           <LinearLayout
               android:layout_margin="@dimen/dp_3"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="@color/text_color_hint"
                   android:textSize="@dimen/sp_20"
                   android:gravity="center"
                   android:text="@string/ShopPrice"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" />
               <TextView
                   android:id="@+id/tv_myshop_price"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
           </LinearLayout>
           <LinearLayout
               android:layout_margin="@dimen/dp_3"

               android:orientation="horizontal"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:textColor="@color/text_color_hint"
                   android:textSize="@dimen/sp_20"
                   android:gravity="center"
                   android:text="@string/ShopDescription"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" />
               <TextView
                   android:layout_weight="1"
                   android:id="@+id/tv_myshop_description"
                   android:layout_width="@dimen/layout"
                   android:layout_height="match_parent" />
           </LinearLayout>
       </LinearLayout>
       <CheckBox
           android:visibility="gone"
           android:id="@+id/cb_myshop"
           android:layout_marginRight="@dimen/dp_10"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </LinearLayout>

</LinearLayout>
